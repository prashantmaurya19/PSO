{
  "compilerOptions": {
    "baseUrl": "src",
    "paths": {
      "@pso/*": ["./*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "bundler",
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "strict": false,
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "docs",
    "thinking",
    "dist"
  ]
}
