{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@pso/*": ["src/*"]
      "@pso/components/*": ["src/components/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "moduleResolution": "node",
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "resolveJsonModule": true,
    "strict": false,
    "importHelpers": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "docs",
    "dist"
  ]
}
